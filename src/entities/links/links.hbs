{{js_log links}}
<form class='flex flex-wrap gap-8' hx-post="/links">
  {{#each links as |section|}}
    <div class='p-4'>
      <h2 class='text-3xl text-white'>{{section.title}}</h2>
      <div class='py-4 flex flex-col gap-4'>
        {{#each section.items as |item|}}
          <a href='{{item.link}}' aria-label="{{item.title}}" target='_blank' class='group block text-white hover:text-zinc-300'>
            <h4 class="text-xl before:content-['->'] motion-safe:group-hover:before:content-['-->'] before:mr-1">{{item.title}}</h4>
            {{#if item.description}}
              <p class='mt-2 text-gray-500'>{{item.description}}</p>
            {{/if}}
          </a>
        {{/each}}
      </div>
    </div>
  {{/each}}
</div>
